<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/databaseID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="undefined"
        />

    <ImageView
        android:id="@+id/contactIcon"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/contact"
        android:padding="8dp"
        android:layout_weight="0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Contact Name" />

        <TextView
            android:id="@+id/contactDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="Contact Description" />

    </LinearLayout>

    <ImageView
        android:id="@+id/deleteTemporary"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/delete_green"
        android:layout_marginRight="0dp"
        android:padding="10dp"
        android:layout_weight="0"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/contactStar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/empty_star"
        android:layout_marginRight="0dp"
        android:padding="10dp"
        android:layout_weight="0"
        />

    <ImageView
        android:id="@+id/contactCheckbox"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/unchecked_checkbox_50"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        android:layout_weight="0"
        />

</LinearLayout>