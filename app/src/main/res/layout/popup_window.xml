<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llSortChangePopup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#EEE"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"

    android:orientation="vertical" >


    <TextView
        android:id="@+id/popupMenuModes"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Modes"
        android:layout_weight="1.0"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:textColor="#777" />

    <ImageView
        android:id="@+id/popupMenuFirstDivider"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        android:src="@drawable/divider"/>

    <LinearLayout
        android:id="@+id/id1x3"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:clickable="true"
        android:background="@drawable/menu_item_selector"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="1x3"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="@color/primaryColor"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id2x4"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:clickable="true"
        android:background="@drawable/menu_item_selector"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="2x4"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="@color/primaryColor"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id3x5"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:clickable="true"
        android:background="@drawable/menu_item_selector"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="3x5"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="@color/primaryColor"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id4x6"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:clickable="true"
        android:background="@drawable/menu_item_selector"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="4x6"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="@color/primaryColor"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="Help"
        android:layout_weight="1.0"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:textColor="#777" />

    <ImageView
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        android:src="@drawable/divider"/>

    <LinearLayout
        android:id="@+id/tellFriend"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:clickable="true"
        android:background="@drawable/menu_item_selector"

        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/tell_friend"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="Tell a friend"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="@color/primaryColor"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/browser"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:clickable="true"
        android:background="@drawable/menu_item_selector"

        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/browser"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="Browser"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="@color/primaryColor"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:clickable="true"
        android:background="@drawable/menu_item_selector"

        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/help"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="Help"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="@color/primaryColor"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:clickable="true"
        android:background="@drawable/menu_item_selector"

        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/message"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="Feedback"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="@color/primaryColor"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:clickable="true"
        android:background="@drawable/menu_item_selector"

        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/star_blue_five"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="Review"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:textColor="@color/primaryColor"/>

    </LinearLayout>


</LinearLayout>